<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.cmdesignlab.MiXTool_v2">

    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_subscriptions_black_24dp"
        android:label="@string/app_name"
        >
        <activity
            android:name="org.cmdesignlab.MiXTool_v2.MainActivity"
            android:theme="@android:style/Theme.DeviceDefault.NoActionBar.Fullscreen"
            tools:targetApi="lollipop"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="org.cmdesignlab.MiXTool_v2.TestVideo" />
        <activity
            android:name="org.cmdesignlab.MiXTool_v2.CardVideo"
            android:theme="@android:style/Theme.DeviceDefault.NoActionBar.Fullscreen"
            tools:targetApi="lollipop"
            android:screenOrientation="landscape"/>
    </application>

</manifest>